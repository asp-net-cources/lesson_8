@model IndexModel;
@{
    ViewData["Title"] = "Home Page";
    var products = Model.Products;
}

<div class="text-center">
    <table>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Количество</th>
            <th>Действия</th>
        </tr>
        @for (int i = 0; i < products.Count; i++)
        {
            <tr>
                <td><div id="name_text_@i">@products[i].Name</div></td>
                <td>@products[i].Description</td>
                <td>@products[i].Count</td>
                <td><button onclick="onEditClick(@i)">✎</button></td>
            </tr>
        }
    </table>
    <h3>Product:</h3>
    <form action="@Url.Action("CreateProduct", "Home")" method="Post">
        Name:<br/>
        <input type="text" placeholder="Введите название" name="name" value=""/><br/>
        Decription:<br/>
        <input type="text" placeholder="Введите описание" name="description" value=""/><br/>
        Count:<br/>
        <input type="password" name="count" value=""/><br/>
        <input type="submit" value="Create"/><br/>
    </form>
</div>
<script>
    function onEditClick(i) {
        var nameText = document.getElementById(`name_text_${i}`);
        var nameInput = document.createElement("input");
        nameInput.id = `name_input_${i}`;
        nameInput.value = nameText.innerText;
        nameText.innerHTML = "";
        nameText.appendChild(nameInput);
        isEditElement.value = true;
    }
</script>